<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background"
    android:gravity="center"
    android:padding="32dp">

    <!-- Login Now Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back to"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        android:letterSpacing="0.1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16sp"
        android:text="UNiVIBE !"
        android:textColor="#FFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="@font/play_bold"/>

    <!-- Logo Section -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="45dp"
        android:contentDescription="App Logo"
        android:src="@drawable/signin_vector" />


    <!-- Username Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="#4D807F7F"
        app:boxStrokeColor="#FFFFFF"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:textColorHint="@color/black"
            android:textStyle= "bold"
            android:inputType="textPersonName"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your university email."
        android:textColor="#3E3E3E"
        android:layout_marginBottom="16dp"
        android:textSize="12sp"
        android:letterSpacing="0.1"/>

    <!-- Password Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#FFFFFF"
        app:boxBackgroundColor="#4D807F7F"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="@color/black"
            android:textStyle= "bold"
            android:inputType="textPassword"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password must be at least 8 characters long."
        android:textColor="#3E3E3E"
        android:layout_marginBottom="8dp"
        android:textSize="12sp"
        android:letterSpacing="0.1"/>

    <!-- Forgot Password Link -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Forgot Password?"
        android:textAlignment="textEnd"
        android:textColor="#BA08D1"
        android:textSize="14sp"
         />

    <!-- Login Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6200EE"
        android:text="SIGN-IN"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        android:fontFamily="@font/play_bold" />


    <!-- Register Link -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:fontFamily="@font/play_regular"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? "
            android:textColor="@color/icon_color"
            android:textSize="14sp"
            android:letterSpacing="0.1"
            />

        <TextView
            android:id="@+id/registerNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register now"
            android:textColor="#6200EE"
            android:textSize="14sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            />
    </LinearLayout>


</LinearLayout>