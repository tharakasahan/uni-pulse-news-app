<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Uniplus"
        tools:targetApi="31">
        <activity
            android:name="com.yourusername.uniplus.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yourusername.uniplus.MainActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.yourusername.uniplus.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.yourusername.uniplus.RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yourusername.uniplus.SportsNewsActivity"
            android:exported="true"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.yourusername.uniplus.EventsNewsActivity"
            android:exported="true"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.yourusername.uniplus.AcademicNewsActivity"
            android:exported="true"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.yourusername.uniplus.AddNewsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yourusername.uniplus.DeveloperInfoActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yourusername.uniplus.HomeActivity"
            android:exported="true"
            android:screenOrientation="fullSensor" />
        <activity
            android:name="com.yourusername.uniplus.UserInfoActivity"
            android:label="User Information"
            android:parentActivityName="com.yourusername.uniplus.MainActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yourusername.uniplus.MainActivity" />
        </activity>
        <activity
            android:name="com.yourusername.uniplus.NewsDetailActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>